/* navigation */
nav {
  margin-top: 2rem;
  width: 100%;
  height: 3.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


nav ul {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  list-style: none;
}
li a {
  height: 100%;
  width: 6.5rem;
  text-transform: uppercase;
  text-decoration: none;
  display: flex;
  justify-content:flex-end;
  gap: 2px;

}
/* main */

main {
  margin: 4rem auto;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
 
 
}

main .left-container {
    display: flex;
    flex-direction: column;
}
h1 {
  font-size: 2rem;
}
.button {
  display: flex;
  flex-direction: row;
}
.Learn{
  width: 6rem;
  height: 1rem;
  text-decoration: none;
  background-color: green;
  color: white;
}
.Get{
  width: 6rem;
  height: 1rem;
  text-decoration: none;
  background-color: blue;
  color: white;
}


/* Bilder iphone1/2: Größe und Position */
.right-container img {
  width: 10vw;
}
.right-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}


  nav ul li {
    height: min-content;
    width: 100%;
  }
  nav li a {
    padding: 1.3rem 0;
  }
 

